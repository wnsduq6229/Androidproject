<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mathback"
    tools:context=".Math_MainActivity">
    <!-- 코드 작성지 김준엽-->

    <TextView
        android:id="@+id/mid"
        android:text=""
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/Btn1"
        android:layout_width="40pt"
        android:layout_height="40pt"
        android:layout_below="@+id/mid"
        android:layout_alignRight="@+id/mid"
        android:background="#00ff0000"
        android:padding="0sp"
        android:scaleType="fitCenter"
        android:src="@drawable/plus" />

    <ImageButton
        android:id="@+id/Btn2"
        android:layout_width="40pt"
        android:layout_height="40pt"
        android:layout_below="@+id/mid"
        android:layout_alignLeft="@+id/mid"
        android:background="#00ff0000"
        android:padding="0sp"
        android:scaleType="fitCenter"
        android:src="@drawable/minus" />

    <ImageButton
        android:id="@+id/Btn3"
        android:layout_width="40pt"
        android:layout_height="40pt"
        android:layout_below="@+id/Btn1"
        android:layout_alignRight="@+id/Btn1"
        android:background="#00ff0000"
        android:padding="0sp"
        android:scaleType="fitCenter"
        android:src="@drawable/multiply" />

    <ImageButton
        android:id="@+id/Btn4"
        android:layout_width="87dp"
        android:layout_height="74dp"
        android:layout_below="@+id/Btn2"
        android:layout_alignLeft="@+id/Btn2"
        android:background="#00ff0000"
        android:padding="0sp"
        android:scaleType="fitCenter"
        android:src="@drawable/divide" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="275dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:text="TextView"
        android:textSize="25dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="TextView"
        android:textColor="#FE2E2E"
        android:textSize="20dp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="93dp"
        android:layout_height="80dp"
        android:layout_below="@+id/Btn3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="-429dp"
        app:srcCompat="@drawable/rabbit" />



</RelativeLayout>